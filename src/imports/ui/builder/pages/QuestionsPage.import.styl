.questions-page
  .questions
    border-left 1px solid $pageBorderColor
    border-right 1px solid $pageBorderColor
    border-bottom 1px solid $pageBorderColor

    .question-items
      margin-top 80px
      margin-bottom 30px

    .question
      display inline
      font-size 28px
      color #999
      font-weight bold
      line-height 60px
      margin-left 15px

      .form-control
        height 40px
        font-weight normal
        font-size 25px

    .required-fields
      color $darkBlue
      font-size 18px
      margin-bottom 20px
