.welcome-page
  .welcome-title
    position absolute
    top 150px

    h1
      color #FFF
      font-weight bold
      text-shadow 2px 2px 2px rgba(0, 0, 0, 0.75);
      margin-bottom 30px

  .welcome-content
    position absolute
    top 320px

    .welcome-content-col
      margin-left 70px

    p
      color #FFF
      text-shadow 2px 2px 2px rgba(0, 0, 0, 0.75);
      font-size 20px
      margin-bottom 40px

@media (max-width: 767px)
  .welcome-page
    padding-bottom 40px
    .welcome-title
      top 100px
    .welcome-content
      position relative
      top 0
      margin-top 20px
      .welcome-content-col
        margin-left auto
      p
        color $defaultTextColour
        text-shadow none
        font-size 18px

@media (min-width: 768px) and (max-width: 991px)
  .welcome-page
    .welcome-content
      top 280px
